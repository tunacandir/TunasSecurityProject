<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#000">
    <!--resource dosyası altındaki drawable klasöründe bulunan fingerprint.pngyi ekrnaa çizer -->
    <ImageView
        android:id="@+id/fingerImage"
        android:src="@drawable/fingerprint"
        android:background="#000"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:layout_below="@+id/fingerImage"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="Please place your fingertip on the scanner to verify your identity"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- Control sayfasına dönüş için kullanılan butonu belirtir -->
    <Button
        android:text="Go Back!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/btnGoBack"/>
</LinearLayout> 